{
  "name": "varchive",
  "private": true,
  "version": "0.0.0",
  "main":"main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:serve": "electron ."
  },
  "dependencies": {
    "echarts": "^5.5.1",
    "element-plus": "^2.8.5",
    "markdown-it": "^14.1.0",
    "vue": "^3.5.10",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.1.4",
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "vite": "^5.4.8",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.varchive.app",
    "copyright": "Copyright ***",
    "productName": "Varchive",
    "files": [
      "!dist/**/*"
    ],
    "mac": {
      "icon": "build/icon.png",
      "category": "public.varchive-category.productivity",
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "createDesktopShortcut": "always",
      "allowToChangeInstallationDirectory": true
    },
    "extends": null
  }
}